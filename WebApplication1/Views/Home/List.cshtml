
@{
    ViewBag.Title = "List";
    var newList = ViewBag.data as string[];
    var curpage = (int)ViewBag.Page;
    var start = curpage - 3;
}

<h2>List</h2>
<h3>第 @ViewBag.Page 页</h3>

<ol>
    @foreach (var item in newList)
    {
        <li>@item</li>
    }
</ol>
<ol>
    @for (int i = start; i < curpage + 3; i++)
    {
        <li>
            <a href="/Home/List?page=@i">第 @i 页</a>
        </li>
    }
</ol>
